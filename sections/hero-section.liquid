  {% endif %}
  margin-block: {{ section.settings.space_top_outside_mb }}px {{ section.settings.space_bottom_outside_mb }}px;
  background: unset;
}
.hero-banner-{{ section.id }} img {
  width: 100%;
  height: auto;
  max-height: 300px;
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  object-fit: cover;
  vertical-align: middle;
  vertical-align: -webkit-baseline-middle;
}
.hero-banner__items,
.hero-banner__image {
  height: 100%;
}
.hero-banner__image::after {
  content: "";
  display: block;
  background: {{ section.settings.color_overlay }};
  position: absolute;
  opacity: {{ section.settings.overlay_opacity }}%;
  width: 100%;
  height: 100%;
  z-index: 1;
  top: 0;
}
.hero-banner__image::before {
  content: "";
  display: block;
  background: {{ section.settings.gradient_overlay }};
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 2;
  top: 0;
}
.hero-banner-{{ section.id }} .hero-banner__content * {
    font-family: "PP Radio Grotesk";
}
.hero-banner__items {
  position: relative;
}
.hero-banner-{{ section.id }} .hero-banner__content {
  position: absolute;
  text-align: {{ section.settings.align_content_section }};
  width: 100%;
  height: 100%;
  display: flex;
  top: 50%;
  left: 50%;
  z-index: 3;
  flex-direction: column;
  {% if section.settings.content_position_mb == 'top-left' %}
    justify-content: flex-start;
    align-items: flex-start;
  {% elsif section.settings.content_position_mb == 'top-center' %}
    justify-content: flex-start;
    align-items: center;
  {% elsif section.settings.content_position_mb == 'top-right' %}
    justify-content: flex-start;
    align-items: flex-end;
  {% elsif section.settings.content_position_mb == 'middle-left' %}
    justify-content: center;
    align-items: flex-start;
  {% elsif section.settings.content_position_mb == 'middle-center' %}
    align-items: center;
    justify-content: center;
  {% elsif section.settings.content_position_mb == 'middle-right' %}
    justify-content: center;
    align-items: flex-end;
  {% elsif section.settings.content_position_mb == 'bottom-left' %}
    justify-content: flex-end;
    align-items: flex-start;
  {% elsif section.settings.content_position_mb == 'bottom-center' %}
    justify-content: flex-end;
    align-items: center;
  {% elsif section.settings.content_position_mb == 'bottom-right' %}
    justify-content: flex-end;
    align-items: flex-end;`
  {% endif %}
  padding-block: {{ section.settings.space_top_mb }}px {{ section.settings.space_bottom_mb }}px;
  padding-inline: {{ section.settings.space_left_mb }}px {{ section.settings.space_right_mb }}px;
  height: calc(100% - ({{ section.settings.space_top_mb }}px + {{ section.settings.space_bottom_mb }}px));
  width: calc(100% - ({{ section.settings.space_left_mb }}px + {{ section.settings.space_right_mb }}px));
  transform: translate(-50%, -50%);
}
.hero-banner__content-title h2 p {
    margin: 0;
}
.hero-banner__content-title h2 {
  font-size: 25px;
  line-height: 29px;
  font-weight: 400;
  letter-spacing: 0;
  margin-top: 0;
  margin-bottom: {{ section.settings.margin_bottom_title_mb }}px;
  color: {{ section.settings.color_content }};
}
.hero-banner-{{ section.id }} .hero-banner__content-title h2 em {
  font-weight: 300;
  font-size: 32px;
  font-family: "PP Eiko Italic";
  line-height: 36px;
}
.hero-banner__content-description,
.hero-banner__content-description p {
  font-size: 14px;
  line-height: 17px;
  font-weight: 400;
  letter-spacing: 0;
  margin: 0;
  color: {{ section.settings.color_content }};
}
.hero-banner__content-description {
  margin-bottom: {{ section.settings.margin_bottom_des_mb }}px;
}
.hero-banner__container-button.button--field {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
}
.hero-banner__container-button.button--link {
    display: flex;
    flex-wrap: wrap;
    gap: 48px;
}
.button--field .hero-banner__content-button {
  font-size: 11px;
  font-weight: 900;
  line-height: 13px;
  letter-spacing: 0.0814px;
  background: #F5B27E;
  width: 148px;
  height: 47px;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  color: {{ section.settings.color_button_text }};
}
.button--link .hero-banner__content-button {
  font-size: 14px;
  font-weight: 400;
  line-height: 17px;
  text-decoration: underline;
  cursor: pointer;
  color: {{ section.settings.color_button_text }};
}
.hero-banner-{{ section.id }} .swiper-pagination-bullet.swiper-pagination-bullet-active {
  background: {{ section.settings.bg_btn_pagination }};
}
.hero-banner-{{ section.id }} .swiper-pagination-bullet {
  background: unset;
  border: 1px {{ section.settings.bg_btn_pagination }} solid;
  width: 10px;
  height: 10px;
  opacity: 1;
}
.hero-banner-{{ section.id }} .swiper-pagination::after {
  content: "";
  display: block;
  width: 100%;
  height: 100%;
  {% if section.settings.show_border_pagination == true %}
    background: {{ section.settings.bg_btn_pagination }};
  {% endif %}
  opacity: 0.14;
  position: absolute;
  top: 0;
  left: 0;
}
.hero-banner-{{ section.id }} .swiper-pagination {
  width: fit-content;
  height: 30px;
  {% if section.settings.show_border_pagination == true %}
    border: 1px #F7F7F6 solid;
  {% endif %}
  {% if section.settings.button_overlap_img == false %}
    position: relative; 
  {% endif %}
  border-radius: 3px;
  display: flex;
  align-items: center;
  padding: 0 8px;
  bottom: {{ section.settings.position_pagination_bottom_mb }}%;
  left: {{ section.settings.position_pagination_left_mb }}%;
  margin-top: {{ section.settings.margin_top_pagination_mb }}px;
  margin-left: {{ section.settings.margin_left_pagination_mb }}px;
  margin-bottom: {{ section.settings.margin_bottom_pagination_mb }}px;
}
