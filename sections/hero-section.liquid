<div class="hero-banner-cs hero-banner-{{ section.id }}">
  <div class="swiper hero-banner__box-container">
    <div class="swiper-wrapper hero-banner__container">
      {% for block in section.blocks %}
        <div class="swiper-slide hero-banner__items-container">
          {% if block.settings.url_item %}
            <a href="{{ block.settings.url_item }}">
          {% endif %}
          <div class="hero-banner__items">
            <div class="hero-banner__image" style="background: {{ block.settings.bg_item }};">
              {% liquid
                assign height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round
                assign sizes = '100vw'
                assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
              %}
              <picture>
                <source
                  media="(max-width: 767px)"
                  srcset="
                    {{ block.settings.image_mb | image_url: width: 300 }} 1x,
                    {{ block.settings.image_mb | image_url: width: 600 }} 2x,
                  ">
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy', height: height, widths: widths, sizes: sizes, alt: block.settings.image.alt, class: 'img-item-slide' }}
                {% else %}
                  {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </picture>
            </div>
            <div class="hero-banner__content {% if section.settings.number_column == 'two' %}hero-banner__content-2-column{% endif %}">
              <div class="hero-banner__content-title">
                <h2 class="small-hide medium-hide">{{ block.settings.title }}</h2>
                <h2 class="large-up-hide">{{ block.settings.title_mb }}</h2>
              </div>
              <div class="hero-banner__content-description small-hide medium-hide">
                {{ block.settings.description }}
              </div>
              <div class="hero-banner__content-description large-up-hide">
                {{ block.settings.description_mb }}
              </div>
              <div class="hero-banner__container-button button--{{ section.settings.button_type }}">
                {% if block.settings.button != blank %}
                    <div class="hero-banner__content-button">
                        {{ block.settings.button }}
                    </div>
                {% endif %}
                {% if block.settings.button_1 != blank %}
                    <div class="hero-banner__content-button">
                        {{ block.settings.button_1 }}
                    </div>
                {% endif %}
              </div>
            </div>
          </div>
          {% if block.settings.url_item %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    {% if section.settings.enable_pagination == true %} 
      <div class="swiper-pagination"></div> 
    {% endif %}
  </div>
</div>

<script>
addEventListener("load", (event) => {
  const slideSwiper = new Swiper(".hero-banner-{{ section.id }} .swiper", {
    {% if section.settings.number_column == 'two' %} 
      slidesPerView: 2,
      direction: "vertical",
    {% else %}
      slidesPerView: 1,
    {% endif %}
    {% if section.settings.enable_autoplay == true %}
      loop: true,
      autoplay: {
        delay: {{ section.settings.slide_transfer_time | times: 1000 }},
        disableOnInteraction: true,
        pauseOnMouseEnter: true,
      },
    {% endif %}
    speed: 2000,
    {% if section.settings.enable_pagination == true %} 
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
    {% endif %}
    {% if section.settings.number_column == 'two' %} 
      breakpoints: {
          990: {
              direction: "horizontal",
          }
      },
    {% endif %}

  });
});

</script>

